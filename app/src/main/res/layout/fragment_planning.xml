<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TableLayout
        android:id="@+id/tableLayoutPlanning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#EFEFEF">

        <!-- Add header row -->
        <TableRow>
            <TextView android:text="ID" android:padding="8dp" android:background="#CCCCCC" />
            <TextView android:text="start" android:padding="8dp" android:background="#CCCCCC" />
            <TextView android:text="end" android:padding="8dp" android:background="#CCCCCC" />
            <TextView android:text="origin" android:padding="8dp" android:background="#CCCCCC" />
            <TextView android:text="reason" android:padding="8dp" android:background="#CCCCCC" />
        </TableRow>
    </TableLayout>

</LinearLayout>
